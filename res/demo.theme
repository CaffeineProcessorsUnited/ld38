            font = res/roboto.gpb
            fontSize = 16
            textColor = #FF00FFFF
            textAlignment = ALIGN_VCENTER_LEFT
            rightToLeft = false
            opacity = 1
        }
        stateDisabled
        {
            skin = demoThemeSkin
            imageList = demoThemeImage
            cursor = demoThemeCursor
            font = res/roboto.gpb
            fontSize = 16
            textColor = #FFFF00FF
            textAlignment = ALIGN_VCENTER_LEFT
            rightToLeft = false
            opacity = 1
        }
    }

        skin demoThemeSkinTransparent
